---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import LatestWeeklyList from '~/components/pages/LatestWeeklyList.astro';
import Button from '~/components/ui/Button.astro';

const metadata = {
    title: '我不知道的周刊',
    ignoreTitleTemplate: true
};
---

<Layout metadata={metadata}>
    <!-- 极简优雅 Hero Section -->
    <Hero
        tagline="AI 驱动的前端技术周刊">
        
        <Fragment slot='title'>
            我不知道的周刊
        </Fragment>
 
        <Fragment slot='subtitle'>
            <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 font-light leading-relaxed max-w-3xl mx-auto">
                发现前端技术的未知之美，每周精选优质内容
            </p>
        </Fragment>

        <Fragment slot='bg'>
            <div class="pointer-events-none">
                <div class="absolute -top-20 -right-20 w-[36rem] h-[36rem] rounded-full bg-[radial-gradient(circle_at_center,rgba(59,130,246,0.25),transparent_60%)] blur-3xl animate-aurora"></div>
                <div class="absolute -bottom-16 -left-16 w-[28rem] h-[28rem] rounded-full bg-[radial-gradient(circle_at_center,rgba(168,85,247,0.22),transparent_60%)] blur-3xl animate-aurora-slow"></div>
                <div class="absolute top-1/3 left-1/4 w-64 h-64 bg-gradient-to-tr from-blue-500/10 to-cyan-400/10 rounded-3xl rotate-12 animate-float-slow"></div>
            </div>
        </Fragment>

        <Fragment slot='actions'>
            <div class="flex flex-wrap items-center justify-center gap-3">
                <Button href="/weekly" variant="primary" size="lg" class="rounded-2xl px-7 py-3">开始阅读</Button>
                <Button href="#latest-content" variant="secondary" size="lg" class="rounded-2xl px-7 py-3">最新内容</Button>
            </div>
        </Fragment>
    </Hero>
    
    <!-- 最新内容区域 -->
    <section id="latest-content" class="scroll-mt-20">
        <LatestWeeklyList />
    </section>
</Layout>

<style>
  @keyframes auroraMove {
    0% { transform: translate3d(0,0,0) rotate(0deg); }
    50% { transform: translate3d(20px,-10px,0) rotate(10deg); }
    100% { transform: translate3d(0,0,0) rotate(0deg); }
  }
  @keyframes floatSlow {
    0% { transform: translateY(0) rotate(12deg); }
    50% { transform: translateY(-10px) rotate(12deg); }
    100% { transform: translateY(0) rotate(12deg); }
  }
  .animate-aurora { animation: auroraMove 12s ease-in-out infinite; }
  .animate-aurora-slow { animation: auroraMove 18s ease-in-out infinite; }
  .animate-float-slow { animation: floatSlow 8s ease-in-out infinite; }
  @media (prefers-reduced-motion: reduce) {
    .animate-aurora, .animate-aurora-slow, .animate-float-slow { animation: none; }
  }
</style>
