---
import { cn } from '~/utils/utils';
import Tags from './Tags.astro';
import dayjs from 'dayjs';

interface StatCardProps {
    title: string;
    date: string | Date;
    tags?: string[];
    desc?: string;
}

const { title, date, desc, tags = [] } = Astro.props as StatCardProps;

// 格式化日期
const formattedDate = new Date(date).toLocaleDateString('zh-CN', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
});

const isNew = dayjs(date).isAfter(dayjs().subtract(2, 'week'));

const cardClasses = cn(
    'group relative overflow-hidden h-full',
    'p-6 lg:p-7 rounded-2xl transition-all duration-500 ease-out',
    'bg-white/80 dark:bg-gray-900/80',
    'backdrop-blur-xl backdrop-saturate-150',
    'border border-gray-200/40 dark:border-gray-700/30',
    'hover:border-gray-300/60 dark:hover:border-gray-600/50',
    'hover:shadow-xl hover:shadow-gray-500/10 dark:hover:shadow-black/20',
    'hover:-translate-y-2 hover:scale-[1.01]',
    'cursor-pointer transform-gpu',
    'before:absolute before:inset-0 before:rounded-2xl before:pointer-events-none',
    'before:bg-gradient-to-br before:from-gray-50/50 before:via-transparent before:to-gray-100/30',
    'dark:before:from-gray-800/30 dark:before:via-transparent dark:before:to-gray-700/20',
    'before:opacity-0 before:transition-all before:duration-700',
    'hover:before:opacity-100',
    'focus-within:ring-2 focus-within:ring-blue-500/20 focus-within:ring-offset-2'
);
---

<div class={cardClasses}>
    <!-- 顶部装饰条 - 更细腻的设计 -->
    <div class="absolute top-0 left-0 w-full h-0.5 bg-gradient-to-r from-blue-500/60 via-purple-500/60 to-blue-500/60 opacity-0 group-hover:opacity-100 transition-all duration-700 rounded-t-2xl scale-x-0 group-hover:scale-x-100 transform origin-center"></div>
    
    <!-- New Badge - 重新设计 -->
    {isNew && (
        <div class="absolute -top-2 -right-2 z-20">
            <div class="relative">
                <!-- 外层光晕 -->
                <div class="absolute inset-0 bg-emerald-400/30 rounded-full blur-lg animate-pulse"></div>
                <!-- 核心指示器 -->
                <div class="relative w-4 h-4 bg-gradient-to-br from-emerald-400 to-emerald-500 rounded-full border-2 border-white dark:border-gray-900 shadow-lg">
                    <div class="absolute inset-0.5 bg-emerald-200/60 rounded-full animate-ping opacity-75"></div>
                </div>
            </div>
        </div>
    )}

    <!-- 内容区域 -->
    <div class="relative z-10 h-full flex flex-col">
        <!-- 主标题 -->
        <h3 class="text-lg lg:text-xl font-semibold text-gray-900 dark:text-white mb-3 line-clamp-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300 font-heading leading-tight">
            {title}
        </h3>
        
        <!-- 描述 -->
        {desc && (
            <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2 text-sm leading-relaxed flex-grow">
                {desc}
            </p>
        )}
        
        <!-- 底部信息区域 -->
        <div class="mt-auto space-y-3">
            <!-- 标签 -->
            {tags.length > 0 && (
                <div class="flex flex-wrap gap-1.5">
                    <Tags tags={tags} maxVisible={3} variant="minimal" size="sm" compact />
                </div>
            )}
            
            <!-- 日期和装饰 -->
            <div class="flex items-center justify-between pt-3 border-t border-gray-200/50 dark:border-gray-700/30">
                <div class="flex items-center text-gray-500 dark:text-gray-400 text-xs">
                    <div class="w-3 h-3 mr-2 rounded-full bg-gray-300 dark:bg-gray-600 opacity-60"></div>
                    <time datetime={date.toString()} class="font-medium">{formattedDate}</time>
                </div>
                
                <!-- 装饰性箭头 -->
                <div class="flex items-center text-gray-400 group-hover:text-blue-500 dark:text-gray-500 dark:group-hover:text-blue-400 transition-all duration-300 transform group-hover:translate-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- 微光效果 -->
    <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-1000 pointer-events-none overflow-hidden rounded-2xl">
        <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent dark:via-white/10 -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1200 ease-out"></div>
    </div>

    <!-- 底部装饰渐变 -->
    <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-gray-300/40 dark:via-gray-600/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
</div>

<style>
    /* 文字渲染优化 */
    h3 {
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        font-feature-settings: "kern" 1, "liga" 1;
    }

    /* 文本截断 */
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* 动画性能优化 */
    .transform-gpu {
        transform: translateZ(0);
        backface-visibility: hidden;
        perspective: 1000px;
    }

    /* 响应式调整 */
    @media (max-width: 640px) {
        .group {
            padding: 1.25rem;
        }
        
        h3 {
            font-size: 1rem;
            line-height: 1.4;
        }
    }

    /* 减少动画对于喜欢减少动画的用户 */
    @media (prefers-reduced-motion: reduce) {
        .group {
            transition: none !important;
        }
        
        .group * {
            animation: none !important;
            transition: none !important;
        }
    }

    /* 触摸设备优化 */
    @media (hover: none) {
        .group:hover {
            transform: none;
        }
    }

    /* 高对比度模式 */
    @media (prefers-contrast: high) {
        .group {
            border-width: 2px;
        }
    }
</style>